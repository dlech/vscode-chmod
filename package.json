{
    "name": "chmod",
    "displayName": "chmod",
    "description": "Set and clears the executable bits of a file",
    "version": "1.0.0",
    "publisher": "dlech",
    "repository": {
        "type": "git",
        "url": "https://github.com/dlech/vscode-chmod.git"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.chmodPlusX",
        "onCommand:extension.chmodMinusX"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.chmodPlusX",
                "title": "Set Executable Bits",
                "category": "chmod"
            },
            {
                "command": "extension.chmodMinusX",
                "title": "Clear Executable Bits",
                "category": "chmod"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "!explorerResourceIsFolder && !exportResourceIsExecutable",
                    "command": "extension.chmodPlusX",
                    "alt": "extension.chmodMinusX",
                    "group": "1_chmod"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
